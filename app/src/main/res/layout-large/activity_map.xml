
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >


        <fragment
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_height="@dimen/dimen_80dp"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_centerInParent="true"
            android:id="@+id/imgLocationPinUp"
            android:src="@drawable/managelocationicon"
            />
    </RelativeLayout>


    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/dimen_70dp"
        android:layout_marginEnd="@dimen/dimen_70dp"
        android:layout_marginStart="@dimen/dimen_70dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <ProgressBar
            android:id="@+id/locationProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="-7dp"
            android:visibility="invisible"
            android:indeterminate="true"
            />


        <RelativeLayout

            android:layout_marginTop="@dimen/dimen_26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_marginStart="@dimen/dimen_26dp"
                android:layout_marginEnd="@dimen/dimen_26dp"
                android:id="@+id/selectLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Address"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="start"/>

            <TextView

                android:layout_marginStart="@dimen/dimen_26dp"
                android:layout_marginEnd="@dimen/dimen_26dp"
                android:id="@+id/changeLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/change"
                android:padding="10dp"
                android:textColor="@color/colorBlue"
                android:fontFamily="@font/opensans_bold"
                android:textSize="13sp"
                />



        </RelativeLayout>

        <TextView
            android:layout_marginStart="@dimen/dimen_26dp"
            android:layout_marginEnd="@dimen/dimen_26dp"
            android:id="@+id/loadingonProgress"
            android:padding="@dimen/dimen_10dp"
            android:text="Shop Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:layout_marginStart="@dimen/dimen_26dp"
            android:layout_marginEnd="@dimen/dimen_26dp"
            android:id="@+id/displayAddres"
            android:maxLines="2"
            android:padding="@dimen/dimen_10dp"
            android:gravity="start"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            />

        <Button
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginStart="@dimen/dimen_26dp"
            android:layout_marginEnd="@dimen/dimen_26dp"
            android:id="@+id/confirmLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/darkRed"
            android:text="@string/confirm_location"/>

    </LinearLayout>

    </LinearLayout>


</RelativeLayout>