<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".VerifyPhoneActivity">


    <LinearLayout
        android:gravity="start"
        android:layout_marginTop="@dimen/dimen_46dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dimen_26dp"
        android:layout_marginEnd="@dimen/dimen_26dp"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="start"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="Verify Mobile Number"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mobile Verification in progress..."
            android:textSize="13sp"
            />




        <TextView
            android:layout_gravity="center"
            android:id="@+id/autvritext"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="verification"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.goodiebag.pinview.Pinview
                android:id="@+id/editTextCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cursorVisible="true"
                app:forceKeyboard="true"
                app:inputType="number"
                app:password="false"
                app:pinBackground="@color/colorPin"
                app:pinHeight="35dp"
                app:pinLength="6"
                app:pinWidth="35dp"
                app:splitWidth="@dimen/dimen_16dp" />
        </LinearLayout>



        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/darkRed"
            android:text="Verify Now"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/didntget"
                android:layout_width="148dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="Didn't get the code ?" />

            <TextView
                android:id="@+id/resend"
                android:layout_width="106dp"
                android:layout_height="41dp"
                android:baselineAligned="false"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="Resend now"
                android:textColor="@color/colorBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/didntget"
                app:layout_constraintTop_toBottomOf="@+id/buttonSignIn"
                app:layout_constraintVertical_bias="0.267" />

        </LinearLayout>


    </LinearLayout>


    <!--<ProgressBar
        android:id="@+id/progressbar"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />-->


</RelativeLayout>