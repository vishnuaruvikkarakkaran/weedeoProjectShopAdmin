<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.call.CallAnsweringActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCallBackground">

        <RelativeLayout
            android:id="@+id/rlLauncerPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/ic_launcher_shade" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlLauncerPlaceholder"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/cIvCustomer"
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_150dp"
                android:src="@drawable/test_ic_user"
                app:civ_border="true"
                app:civ_border_color="#121622"
                app:civ_border_width="10dp"
                app:civ_shadow="false"
                app:civ_shadow_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:text="@string/text_calling"
                android:textSize="@dimen/dimen_18sp"
                android:textColor="@color/colorCalling" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/str_user_dummy"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                android:background="@drawable/ef_ic_arrow_back"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:background="@drawable/ef_ic_arrow_back"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ef_ic_arrow_back"
                android:visibility="gone" />

            <com.gauravbhola.ripplepulsebackground.RipplePulseLayout
                android:id="@+id/layout_ripplepulse"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/dimen_200dp"
                android:clipChildren="false"
                ripple:duration="1500"
                ripple:endRadius="40dp"
                ripple:rippleColor="@color/white"
                ripple:rippleType="stroke"
                ripple:startRadius="4dp"
                ripple:strokeWidth="2dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible"
                    android:backgroundTint="@color/colorVideocallButton"
                    android:src="@drawable/ic_video_cam"
                    android:tint="@color/white" />



            </com.gauravbhola.ripplepulsebackground.RipplePulseLayout>


            <ImageView
                android:id="@+id/ivRightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ef_ic_arrow_forward"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:background="@drawable/ef_ic_arrow_forward"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="@dimen/dimen_10dp"
                android:background="@drawable/ef_ic_arrow_forward"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>