<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#191919"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:id="@+id/toppannel"
        android:layout_height="@dimen/dimen_60dp">

        <TextView
            android:layout_marginTop="@dimen/dimen_16dp"
            android:id="@+id/statusIcon"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:gravity="center"
            android:drawablePadding="@dimen/dimen_10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Request  "
            android:layout_marginStart="@dimen/dimen_16dp"
            android:id="@+id/reqType"
            android:layout_toRightOf="@+id/statusIcon"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:fontFamily="@font/opensans_semibold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:layout_below="@+id/toppannel"
        >


        <ImageView

            android:id="@+id/profieleImage"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <ImageView
            android:id="@+id/imgPrev"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_gravity="center|start"
            android:outlineAmbientShadowColor="@color/colorAsh"
            android:outlineSpotShadowColor="@color/colorAsh"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription,PrivateResource,UnusedAttribute" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_gravity="center|end"
            android:outlineAmbientShadowColor="@color/colorAsh"
            android:outlineSpotShadowColor="@color/colorAsh"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription,PrivateResource,UnusedAttribute" />


        <VideoView
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/profileVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300dp"/>

    </RelativeLayout>


    <LinearLayout
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            card_view:cardCornerRadius="30dp"
            card_view:cardMaxElevation="1dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_40dp"
            card_view:cardElevation="1dp"
            android:backgroundTint="@color/colorAsh"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_marginBottom="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="false">

            <Button
                android:textColor="@color/colorBlue"
                android:background="@drawable/delete"
                android:layout_centerInParent="true"
                android:id="@+id/delete"
                android:layout_gravity="center"
                android:elevation="@dimen/dimen_20dp"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:ignore="RtlSymmetry" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>