<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme"  parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="AppThemeOlp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.App.Light.Dialog.NoActionBar" parent="Theme.AppCompat.Light.Dialog">
        <!-- Color palette -->
        <item name="colorAccent">@color/colorBtnNxt</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="underline" parent="AppTheme">
        <item name="colorPrimary">@color/colorSignInBtn</item>
    </style>

    <style name="NoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

        />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeNoWhiteSpace" parent="@style/Theme.Design.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>


</resources>
